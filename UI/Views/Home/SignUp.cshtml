@model BusinessLayer.SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<html>
<head>
    <link rel="stylesheet" href="css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
</head>

<body>
    <div class="main">
        <p class="sign" align="center">Kayıt Formu</p>
        <form class="form1" method="post">
            <input class="un" type="text" name="NameSurname" align="center" placeholder="İsim - Soyisim" required>
            <input class="un" type="text" name="Email" align="center" placeholder="E-Mail" required>
            <input class="pass" type="password" name="Password" align="center" placeholder="Şifre" required>
            <button type="submit" class="submit">Kayıt Ol</button>
        </form>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <p style="color:red;" text-align:center;>@ViewBag.ErrorMessage</p>
        }
    </div>
</body>
</html>

